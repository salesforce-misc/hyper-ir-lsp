{
	"name": "hir-language-server",
	"description": "Code intelligence for Hyper IR",
	"displayName": "Hyper IR language server",
	"publisher": "Adrian Vogelsgesang",
	"license": "MIT",
	"version": "0.0.1",
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"language-server"
	],
	"repository": {
		"url": "https://github.com/vogelsgesang/hir-lsp"
	},
	"engines": {
		"vscode": "^1.83.0"
	},
	"enabledApiProposals": [],
	"activationEvents": [],
	"main": "./extension.js",
	"markdown": "github",
	"contributes": {
		"languages": [
			{
				"id": "hir",
				"extensions": [
					".hir"
				],
				"aliases": [
					"Hyper IR"
				],
				"firstLine": "^# Hyper IR",
				"configuration": "./hir-language-configuration.json"
			}
		]
	},
	"scripts": {
		"watch": "node ./build.js --watch",
		"test-compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"build": "node ./build.js --release",
		"package": "pnpm build && cd dist && vsce package --no-dependencies -o ..",
		"publish": "pnpm build && cd dist && vsce publish --no-dependencies -o .."
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/node": "^20.8.6",
		"@types/vscode": "^1.83.0",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"@vscode/vsce": "^2.21.1",
		"esbuild": "^0.19.4",
		"eslint": "^8.5.1",
		"typescript": "^5.2.2"
	}
}
